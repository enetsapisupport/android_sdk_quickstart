<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <android.support.constraint.Guideline
        android:id="@+id/gl_v33"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33"
        />

    <TextView
        android:id="@+id/tv_umid_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        android:text="UMID"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/gl_v33"
        android:gravity="bottom|left"
        />

    <EditText
        android:id="@+id/et_umid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/gl_v33"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_umid_label"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_umid_label"
        android:hint="YOUR UMID HERE"
        android:gravity="bottom|left"
        />

    <TextView
        android:id="@+id/tv_apikey_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        android:text="API Key"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_umid_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/gl_v33"
        android:gravity="bottom|left"
        />

    <EditText
        android:id="@+id/et_apikey"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/gl_v33"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_apikey_label"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_apikey_label"
        android:hint="YOUR API KEY HERE"
        android:gravity="bottom|left"
        />

    <TextView
        android:id="@+id/tv_secretkey_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        android:text="Secret Key"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_apikey_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/gl_v33"
        android:gravity="bottom|left"
        />

    <EditText
        android:id="@+id/et_secretkey"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/gl_v33"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_secretkey_label"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_secretkey_label"
        android:hint="YOUR Secret KEY HERE"
        android:gravity="bottom|left"
        />

    <TextView
        android:id="@+id/tv_amount_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        android:text="Amt(Cents)"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_secretkey_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/gl_v33"
        android:gravity="bottom|left"
        />

    <EditText
        android:id="@+id/et_amount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/gl_v33"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_amount_label"
        android:padding="16dp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@id/tv_amount_label"
        android:text="1000"
        android:gravity="bottom|left"
        />

    <Button
        android:id="@+id/btn_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:text="Make Payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>